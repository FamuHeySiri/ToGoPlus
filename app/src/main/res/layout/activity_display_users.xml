<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activities.AdminPortal.DisplayUsers">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewUsers_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_below="@id/displayUsers_btnLogout"
        tools:itemCount="17"
        tools:listitem="@layout/view_user_card" />

    <Button
        android:id="@+id/displayUsers_btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout" />

</RelativeLayout>